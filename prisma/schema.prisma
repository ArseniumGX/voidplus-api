// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String?
  avatar    String?
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  watched   Movies[]
}

model Movies {
  id        String     @id @default(uuid())
  title     String
  poster    String?
  synopsis  String?
  year      Int
  duration  String?
  rating    Float?
  trailer   String?
  genres    Genres[]
  actors    Actors[]
  producer  Producer[]
  watched   User[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@unique([title, year])
}

model Genres {
  id     String   @id @default(uuid())
  name   String   @unique
  movies Movies[]
}

model Actors {
  id     String   @id @default(uuid())
  name   String   @unique
  movies Movies[]
}

model Producer {
  id     String   @id @default(uuid())
  name   String   @unique
  movies Movies[]
}
